<% content_for :header_actions do %>
<a class="list" href='/lists'>All Lists</a>
<% end %>

<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><a class="edit" href="/lists/<%= params[:list_id] %>/edit">Edit List</a></li>
    </ul>
  </header>
</section>

<ul id='todos'>
  <% @list[:todos].each do |todo| %>
  <li>
    <a>
      <h2><%= todo[:title] %></h2>
    </a>
  </li>
  <% end %>
  <% if @add_todo %>
  <li>
    Add item...
  </li>
  <% end %>
</ul>

<a href='/lists/<%= params[:list_id] %>/add'>Add Todo</a>