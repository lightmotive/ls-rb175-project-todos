<% content_for :header_actions do %>
<a class="list" href='/lists'>All Lists</a>
<% end %>

<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><a class="edit" href="/lists/<%= @list_id %>/edit">Edit List</a></li>
    </ul>
  </header>

  <ul>
    <% @list[:todos].each_with_index do |todo, todo_id| %>
    <li>
      <form action="/lists/<%= @list_id %>/todos/<%= todo_id %>/check" method="post" class="check">
          <input type="hidden" name="completed" value="true">
          <button type="submit">Complete</button>
        </form>
      <h3><%= todo[:name] %> - Done: <%= todo[:done] %></h3>
      <form action="/lists/<%= @list_id %>/todos/<%= todo_id %>/delete" method="post" class="delete">
        <button type="submit">Delete</button>
      </form>
    </li>
    <% end %>
  </ul>
</section>

<form action="/lists/<%= @list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo_name">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo_name" id="todo" placeholder="Something to do" type="text" value="<%= params[:todo_name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>