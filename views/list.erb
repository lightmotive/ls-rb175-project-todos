<% content_for :header_actions do %>
<a class="list" href='/lists'>All Lists</a>
<% end %>

<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><a class="edit" href="/lists/<%= params[:list_id] %>/edit">Edit List</a></li>
    </ul>
  </header>
</section>

<ul id='todos'>
  <% @list[:todos].each do |todo| %>
  <li>
    <a>
      <h2><%= todo[:name] %> - Done: <%= todo[:done] %></h2>
    </a>
  </li>
  <% end %>
</ul>

<form action="/lists/<%= params[:list_id] %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo_name">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo_name" id="todo" placeholder="Something to do" type="text" value="<%= params[:todo_name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>